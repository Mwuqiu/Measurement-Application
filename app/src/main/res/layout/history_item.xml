<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99bbaa"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/ivv"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="敌敌畏"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/ivv"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvv_result"
            android:textSize="15sp"
            android:text="合格"
            android:layout_marginLeft="50sp"
            app:layout_constraintTop_toBottomOf="@id/tvv_name"
            app:layout_constraintLeft_toRightOf="@id/ivv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvv_date"
            android:text="2022/11/22 19:54"
            android:textSize="15sp"
            android:layout_marginLeft="50sp"
            app:layout_constraintTop_toBottomOf="@id/tvv_result"
            app:layout_constraintLeft_toRightOf="@id/ivv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>